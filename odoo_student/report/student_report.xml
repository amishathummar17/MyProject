<odoo>
    <template id="report_student">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                         <h2 align="center"><b>Student Marksheet</b></h2>
                   <table class="table table-sm o_main_table mt-4">
                       <thead style="display: table-row-group">
                    <tr>
                        <th>Name</th>
                        <th><t t-esc="o.name_id.name"/></th>
                        <th>Standard</th>
                        <th><t t-esc="o.std"/></th>
                    </tr>
                        <tr>
                            <th>Phone</th>
                            <th><t t-esc="o.phone"/></th>
                            <th>School</th>
                            <th><t t-esc="o.school_id.name"/></th>
                        </tr>
                       </thead>
                    </table>
                    <br/><br/>

                    <table class="table table-sm o_main_table mt-4">
                        <thead style="display: table-row-group">
                         <tr>
                             <th>Subject</th>
                             <th>Total</th>
                             <th>Get Mark</th>
                         </tr>
                                <tr t-foreach="o.mark_ids" t-as="mark">
                                 <th><t t-esc="mark.sub"/></th>
                                 <th><t t-esc="mark.total"/></th>
                                 <th><t t-esc="mark.get_mark"/></th>
                                </tr>
                        </thead>
                     </table>
                    <br/><br/>
                        <tr>
                            <h1 align="right">Total :
                                <td><t t-esc="o.total"/></td>
                            </h1>
                            <h1 align="right">Percentage :
                                <td><t t-esc="o.percentage"/></td>
                            </h1>
                            <h1 align="right">Type :
                                <td><t t-esc="o.type"/></td>
                            </h1>
                        </tr>
                </t>
            </t>
        </t>
    </template>

    <record id="student_report" model="ir.actions.report">
        <field name="name">Student Report</field>
        <field name="model">std.student</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">odoo_student.report_student</field>
        <field name="report_file">odoo_student.report_student</field>
        <field name="binding_model_id" ref="model_std_student"/>
        <field name="print_report_name">'Completion_%s' % (object.name_id.name)</field>
        <field name="binding_type">report</field>
    </record>
</odoo>