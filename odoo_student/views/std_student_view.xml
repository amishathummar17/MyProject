<odoo>
    <record model="ir.ui.view" id="std_student_form_view">
        <field name="name">view.std.student</field>
        <field name="model">std.student</field>
        <field name="arch" type="xml">
            <form string="Std Student">
                <sheet>
                    <group>
                    <group>
                            <field name="name_id"/>
                            <field name="std"/>
                        </group>
                        <group>
                            <field name="school_id"/>
                            <field name="phone"/>
                        </group>
                    </group>
                    <notebook>
                    <page string="Mark">
                        <field name="mark_ids">
                                    <tree editable="bottom">
                                        <field name="sub"/>
                                        <field name="total"/>
                                        <field name="get_mark"/>
                                    </tree>
                        </field>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group class="oe_subtotal_footer oe_right" colspan="2">
                                <field name="total"/>
                                <field name="percentage"/>
                                <field name="type"/>
                            </group>
                        </group>
                    </page>
                </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="std_student_tree_view">
        <field name="name">view.std.student</field>
        <field name="model">std.student</field>
        <field name="arch" type="xml">
            <tree string="Std Student">
                <field name="name_id"/>
                <field name="std"/>
                <field name="school_id"/>
                <field name="total"/>
                <field name="percentage"/>
                <field name="phone"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

     <record model="ir.actions.act_window" id="action_std_student">
        <field name="name">Std Student</field>
        <field name="res_model">std.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_odoo_student" parent="" name="Student" sequence="10"
          action=""/>
    <menuitem id="menu_std_student_details" parent="menu_odoo_student" name="Student Marksheet"  sequence="10"
          action="action_std_student"/>

</odoo>